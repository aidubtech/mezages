.DEFAULT_GOAL := help

## ------------------------------------------------------------------------------------------------------------------------------
## Help

help:
	@awk 'BEGIN {FS = ":.*##"} /^[a-zA-Z0-9_-]+:.*?##/ { printf "  \033[36m%-25s\033[0m %s\n", $$1, $$2 } /^##@/ { printf "\n\033[1m%s\033[0m\n", substr($$0, 5) } ' $(MAKEFILE_LIST)

## ------------------------------------------------------------------------------------------------------------------------------
##@ Installation
